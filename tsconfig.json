  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"]
